
<header>
 <h1>Books</h1>
</header>

<table>

 <tr>
  <th>Title</th>
  <th>Body</th>
 </tr>


    <% @books.each do |book| %>
   <tr>
     <td><%= book.title %></td>
     <td><%= book.body %></td>
      <td class="t-nav">
       <span class="book-show"> <%= link_to "Show" , book_path(book.id) %></span>
       <span class="book-edit"> <%= link_to "Edit" , edit_book_path(book.id) %></span>
       <span class="book-destroy"> <%= link_to "Destroy" , book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></span>
      </td>
    </tr>
     <% end %>

</table>



